<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
	
</head>
<script>
	window.onload = function() {
		var test1 = new Vue({
			el : '#test1',
			data : {
				str1 : '123',
				int1 : 100,
				float1 : 11.11
			}
		})
		var test2 = new Vue({
			el : '.test2',
			data : {
				str1 : '123',
				int1 : 200,
				float1 : 22.22
			}
		})
		var test3 = new Vue({
			el : '#test3',
			data : {
				str1 : '123',
				int1 : 300,
				float1 : 33.33,
				boolean3 : true,
				array3 : [ 10, 20, 30 ],
				object3 : {
					a1 : '123',
					a2 : '123'
				}
			}
		})

		console.log(test3.str1);
		console.log(test3.$data);
		console.log(test3.$data.str1);

		var test4 = new Vue({
			el : '#test4',
			data : {
				name : '123',
				age : 30
			},
			methods : {
				user_info : function() {
					return '123' + this.name + '123' + this.age + '123';
				}
			}
		})
	}
</script>
</head>
<body>
	<div id="test1">
		<h1>{{str1}}</h1>
		<h1>{{int1}}</h1>
		<h1>{{float1}}</h1>
	</div>
	<hr />
	<div class="test2">
		<h1>{{str1}}</h1>
		<h1>{{int1}}</h1>
		<h1>{{float1}}</h1>
	</div>
	<hr />
	<div id="test3">
		<h1>{{str1}}</h1>
		<h1>{{int1}}</h1>
		<h1>{{float1}}</h1>
		<h1>{{boolean3}}</h1>
		<h1>{{array3[0]}}</h1>
		<h1>{{array3[1]}}</h1>
		<h1>{{array3[2]}}</h1>
		<h1>{{object3.a1}}</h1>
		<h1>{{object3.a2}}</h1>
	</div>
	<div id="test4">
		<h1>{{user_info()}}</h1>
	</div>
</body>
</html>